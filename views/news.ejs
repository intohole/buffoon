<!DOCTYPE html>
<html>
<%- include  head %>
    <body>
        <div class="container" >
            <p class="navbar-text navbar-left"><font size=15 ><%= title %></font></p>
        </div>
        <div id="home">
        <ul class="post">
            <% for(var i = 0 ; i < news_contents.length;i++) { %>
            <div align="left">
            <li><a href="<%- news_contents[i].url %>"><%= news_contents[i].title %>&nbsp;&nbsp;&nbsp;&nbsp;来源:<%= news_contents[i].website  %>&nbsp;&nbsp;&nbsp;作者:<%= news_contents[i].author  %></a></li>                        
            <pre class="nav margin-for-mobile" width="60%" ><%= news_contents[i].summary %></pre>
            </div>
            <% } %>
        </ul>
        </div>
    </body>
</html>
